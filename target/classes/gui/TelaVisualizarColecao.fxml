<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TelaVisualizarColecaoController">
   <children>
      <Label fx:id="labelNomeColecao" layoutX="25.0" layoutY="14.0" text="Entradas da Coleção: [Nome]">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TableView fx:id="tabelaEntradas" layoutX="25.0" layoutY="50.0" prefHeight="280.0" prefWidth="450.0">
        <columns>
          <TableColumn fx:id="colunaTitulo" prefWidth="250.0" text="Título" />
          <TableColumn fx:id="colunaAutores" prefWidth="200.0" text="Autores" />
        </columns>
      </TableView>
      <Button fx:id="btnRemover" layoutX="346.0" layoutY="346.0" onAction="#removerEntrada" prefWidth="130.0" text="Remover Entrada" />
      <Button fx:id="btnFechar" layoutX="25.0" layoutY="346.0" onAction="#fecharJanela" prefWidth="130.0" text="Fechar" />
   </children>
</AnchorPane>